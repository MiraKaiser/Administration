<!DOCTYPE html>
<html lang="nl">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>FRM MB - Dashboard</title>
        @Styles.Render("~/bundles/dashkit-styles")
        @Styles.Render("~/bundles/custom-styles")
        @Scripts.Render("~/bundles/modernizr")
        
        <script>
            var colorScheme = ( localStorage.getItem('dashkitColorScheme') ) ? localStorage.getItem('dashkitColorScheme') : 'light';
        </script>

    </head>
    <body>

        @using Microsoft.AspNet.Identity
        @if (Request.IsAuthenticated)
        {
            @Html.Partial("_Navigation")
        }

        <div class="main-content pt-5">
            <div class="container body-content">
                @RenderBody()
            </div>
        </div>


        @Scripts.Render("~/bundles/dashkit-scripts")
        @Scripts.Render("~/bundles/custom-scripts")
        @RenderSection("scripts", required: false)
    </body>
</html>
